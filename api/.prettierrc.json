{
  "arrowParens": "avoid",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "printWidth": 80,
  "quoteProps": "as-needed",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": false,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^node:",
    "^(?!@/|[.])",
    "^@/lib/",
    "^@/contracts/",
    "^@/guards/",
    "^@/middleware/",
    "^@/datasources/",
    "^@/models/",
    "^@/mailer/",
    "^@/features/",
    "^@/",
    "^[.][.]/",
    "^[.]/"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderSideEffects": false
}
